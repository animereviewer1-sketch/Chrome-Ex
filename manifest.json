{
  "manifest_version": 3,
  "name": "Custom New Tab",
  "version": "2.0.0",
  "description": "A customizable new tab page with widgets, themes, and more",
  "permissions": [
    "storage",
    "tabs",
    "bookmarks",
    "alarms"
  ],
  "host_permissions": [
    "https://api.weatherapi.com/*",
    "https://fonts.googleapis.com/*",
    "https://fonts.gstatic.com/*"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "options_page": "settings.html",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Custom New Tab Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
