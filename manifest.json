{
  "manifest_version": 3,
  "name": "Chrome-Ex - Custom New Tab",
  "version": "1.0.0",
  "description": "Anpassbare New Tab Seite mit Widgets, Themes und mehr",
  "permissions": [
    "storage",
    "tabs",
    "bookmarks",
    "alarms",
    "notifications"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "service_worker": "js/service-worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
