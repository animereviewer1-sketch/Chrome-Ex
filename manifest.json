{
  "manifest_version": 3,
  "name": "Chrome-Ex - Custom New Tab",
  "version": "1.0.0",
  "description": "Anpassbare New Tab Seite mit Widgets, Themes und mehr",
  "permissions": [
    "storage",
    "tabs",
    "bookmarks",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "_comment": "host_permissions <all_urls> is required for the distraction counter feature to track clicks globally across all websites as specified in requirements",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "service_worker": "js/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content-script.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
