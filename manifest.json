{
  "manifest_version": 3,
  "name": "SuperStart - Neue Tab Seite",
  "version": "1.0.0",
  "description": "Eine moderne, anpassbare New Tab Seite mit Uhr, Suche und Schnellzugriff auf Ihre Lieblingsseiten.",
  "author": "SuperStart Team",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "options_page": "settings.html",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "SuperStart Einstellungen"
  }
}
